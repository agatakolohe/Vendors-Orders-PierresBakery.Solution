@using VendorsOrdersPierresBakery.Models;

@{
    Layout = "_Layout";
}
<div class="jumbotron">
    <h1>Your Current Vendors: </h1>
    <h3>(Click on the vendor's name for more information)</h3>
</div>

<div class="homevendors">
    @if (@Model.Count == 0)
    {
        <h2>You currently do not have any vendors.</h2>
    }

    @foreach (Vendor vendor in Model)
    {
        <h3><strong>Vendor Name: </strong> <a href='/vendors/@vendor.VendorId'>@vendor.VendorName</a></h3>
        <ul>
            <li><strong>Vendor Description: </strong> @vendor.VendorDescription</li>
        </ul>
    }
    <h3><a href='/vendors/new'>Add a New Vendor</a></h3>
    <h3><a href='/'>Return to Home Page</a></h3>
</div>
