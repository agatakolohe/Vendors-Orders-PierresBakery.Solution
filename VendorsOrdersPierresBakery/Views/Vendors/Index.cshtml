@using VendorsOrdersPierresBakery.Models;

@{
    Layout = "_Layout";
}
<div class="jumbotron">
    <h1>Your Current Vendors: </h1>
</div>

<div class="homebutton">
    @if (@Model.Count == 0)
    {
        <h2>You currently do not have any vendors.</h2>
        <h3><a href='/vendors/new'>Add a New Vendor</a></h3>
    }

    @foreach (Vendor vendor in Model)
    {
        <h3><a href='/vendors/@vendor.VendorId'>@vendor.VendorName</a></h3>
        <ul>
            <li>@vendor.VendorDescription</li>
        </ul>
    }

    <p><a href='/'>Return to Home Page</a></p>
</div>
